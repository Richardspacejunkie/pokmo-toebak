<MyGridLayout>

    move1_input:move1_input
    move2_input:move2_input
    move3_input:move3_input
    move4_input:move4_input

    GridLayout:
        cols:1

        size: 320, 240

        col_force_default: True
        col_default_width: 320

        row_force_default: True
        row_default_height: 240

        Label:
            text: "Pokmo-Toebak! beta v0.6.1"

        GridLayout:
            cols:2

            col_force_default: True
            col_default_width: 160

            row_force_default: True
            row_default_height: 40

            Label:
                text: "Enter move 1 PP"
            TextInput:
                id: move1_input
                multiline: False
                input_filter: "int"

            Label:
                text: "Enter move 2 PP"
            TextInput:
                id: move2_input
                multiline: False
                input_filter: "int"

            Label:
                text: "Enter move 3 PP"
            TextInput:
                id: move3_input
                multiline: False
                input_filter: "int"

            Label:
                text: "Enter move 4 PP"
            TextInput:
                id: move4_input
                multiline: False
                input_filter: "int"
        
        Button:
            text: "Update PP"    
            on_press: root.update_pp()